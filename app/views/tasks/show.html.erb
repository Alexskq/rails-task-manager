<h1>Details Task</h1>

<p><%= @task.details %></p>
<p>
 <% if @task.completed %>
    <i class="fa-regular fa-square-check"></i> This task is completed
  <% else %>
    <i class="fa-regular fa-square"></i> This task is not completed yet
  <% end %>
</p>


<%= link_to "Back", tasks_path %>
<%= link_to "Edit", edit_task_path %>
<%= link_to "Delete",
  destroy_task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
